<table
  role="presentation"
  width="100%"
  cellpadding="0"
  cellspacing="0"
  style="background-color: #ffffff; border-bottom: 1px solid #eee;"
>
  <tr>
    <td align="center" style="padding: 20px 0;">
      <table
        role="presentation"
        width="600"
        cellpadding="0"
        cellspacing="0"
        style="width: 100%; max-width: 600px;"
      >
        <tr>
          <td align="left" style="padding: 0 20px;">
            <a
              href="{{appUrl}}"
              target="_blank"
              style="text-decoration: none; color: #0C2F59; display: inline-flex; align-items: center;"
            >
              <span
                style="
                  display: inline-block;
                  width: 48px;
                  height: 48px;
                  border-radius: 12px;
                  overflow: hidden;
                  background-color: #ffffff;
                  box-shadow: 0 10px 30px -15px rgba(12,47,89,0.6);
                  margin-right: 10px;
                "
              >
                <img
                  src="{{logoUrl}}"
                  alt="AulaUm logo"
                  width="48"
                  height="48"
                  style="display: block; width: 100%; height: 100%; object-fit: contain;"
                />
              </span>
              <span style="display: inline-block; vertical-align: middle;">
                <span
                  style="
                    font-size: 18px;
                    font-weight: 600;
                    line-height: 1.2;
                    display: block;
                  "
                  >AulaUm</span
                >
                <span
                  style="
                    font-size: 11px;
                    text-transform: uppercase;
                    letter-spacing: 2px;
                    color: #F6A800;
                  "
                  >Aprendizagem em movimento</span
                >
              </span>
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
